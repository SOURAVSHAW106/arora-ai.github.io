<body>
  <h2>Enter Your Password to Continue</h2>
  <input type="password" id="password" placeholder="Enter Password" />
  <button onclick="checkPassword()">Submit</button>
  <div id="error"></div>

  <script>
    function checkPassword() {
      const input = document.getElementById('password').value.trim().toLowerCase();
      if (input === "shreya") {
        window.location.href = "3-shreya.html";
      } else if (input === "shaw") {
        window.location.href = "4-father.html";
      } else if (input === "106") {
        window.location.href = "5-sourav.html";
      } else {
        document.getElementById('error').textContent = "Incorrect password. Try again.";
      }
    }
  </script>
